{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "pretty": true,
        "outDir": "./lib",
        "jsx": "react"
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "include": ["./src/"],
    "exclude": [
        "node_modules",
        "artifacts"
    ]
}